<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PuzzleTile">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmptyPuzzleTile" parent="PuzzleTile">
        <item name="android:textColor">#000000</item> <!-- Cambia el color del texto a negro -->
        <item name="android:background">@drawable/empty_tile_background</item>
    </style>
</resources>